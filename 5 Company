//CREATE STATEMENT//

create table Department(
Dno int(10) primary key,
Dname varchar(10),
Mgrssn int(10),
Mgrstartdate date);

-- Add an index to Dno in the Department table

ALTER TABLE Department ADD INDEX idx_DNo (DNo);

-- Add an index to Mgrssn in the Department table

ALTER TABLE Department ADD INDEX idx_Mgrssn (Mgrssn);

create table Employee(
SSN int(10),
Name varchar(10),
Address varchar(20),
Sex varchar(15),
Salary int(20),
Superssn int(10),
Dno int(10),
foreign key(Superssn) references Employee(SSN),
foreign key(Dno) references Department(Dno),
foreign key(SSN) references Department(Mgrssn));

create table Dlocation(
Dno int(10),
Dloc varchar(10),
foreign key(Dno) references Department(Dno));

create table Project(
Pno int(10) primary key,
Pname varchar(10),
Ploc varchar(20),
Dno int(10),
foreign key(Dno) references Department(Dno));

create table Works_on(
SSN int(10),Pno int(10),
Hours time,
foreign key(SSN) references Employee(SSN),
foreign key(Pno) references Project(Pno));

